<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>

            <TextView
                android:id="@+id/codeText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:textSize="20sp"
                android:textColor="@color/colorRed"
                android:textAlignment="center"
                android:text="0000" />

            <TextView
                android:id="@+id/addressText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:textSize="20sp"
                android:textColor="@color/colorRed"
                android:text="Адрес"
                />
    <TextView
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:textSize="20sp"
        android:textColor="@color/colorRed"
        android:text="18 часов"
        />

            <ListView
                android:id="@+id/qr_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.41"
                android:background="@color/colorMint"/>
            <TextView
                android:id="@+id/toPayText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:textSize="20sp"
                android:textColor="@color/colorRed"
                android:textAlignment="center"
                android:text="Итого" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/shop"
            android:onClick="onShopClick"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/template"
            android:onClick="onTemplatesClick"/>

        <ImageButton
            android:id="@+id/qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/qr_pressed" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/profile" />
    </LinearLayout>

</LinearLayout>